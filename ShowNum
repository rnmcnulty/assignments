
public class ShowNum {

    //Declaration of instance variables
    private int numberOfRows, numberOfColumns;

    // Default Constructor
    public ShowNum() {
    }

    // Overloaded Constructor
    public ShowNum(int row, int col) {
        numberOfRows = row;
        numberOfColumns = col;
    }

    // Setters and Getters for instance variable numberOfRows
    public void setnumberOfRows(int row) {
        numberOfRows = row;
    }

    public int getnumberOfRows() {
        return numberOfRows;
    }

    // Setters and Getters for instance variable numberOfColumns
    public void setnumberOfColumns(int col) {
        numberOfColumns = col;
    }

    public int getnumberOfColumns() {
        return numberOfColumns;
    }

    // Cleaner and shorter version of for loop, method which displays asterisks
    public void display() {
        for (int row = 0; row < numberOfRows; row++) {
            for (int col = 0; col < numberOfColumns; col++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}

